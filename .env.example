# Server Configuration
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-here

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# AssemblyAI Configuration (for transcription)
ASSEMBLYAI_API_KEY=your-assemblyai-api-key-here

# Zoom SDK Configuration
ZOOM_SDK_KEY=your-zoom-sdk-key-here
ZOOM_SDK_SECRET=your-zoom-sdk-secret-here
ZOOM_WEBHOOK_SECRET=your-zoom-webhook-secret-here

# Google Meet Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Microsoft Teams Configuration (optional)
TEAMS_APP_ID=your-teams-app-id-here
TEAMS_APP_SECRET=your-teams-app-secret-here

# Database Configuration
DATABASE_URL=sqlite://./database.sqlite

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# File Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB

# AI Configuration
AI_SUGGESTION_INTERVAL=30000
TRANSCRIPTION_LANGUAGE=en-US
AI_CONFIDENCE_THRESHOLD=0.8

# Development
NODE_ENV=development